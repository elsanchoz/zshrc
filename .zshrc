
# ZSH-Config by elsanchoz

# aliasrc
source ~/.config/aliases.sh

# functions
source ~/.config/zfunctions.sh

# GRML-Linux .zshrc
source ~/.zshrc.grml

export HISTFILE=~/.zsh_history
export HISTSIZE=100000

export BROWSER=firefox

export MAIL=thunderbird

export TERM=xterm

export EDITOR=vim

export PAGER=less

HOSTNAME="`hostname`"
# Enjoy!

